generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @unique @default(cuid())
  email     String      @unique
  password  String
  fullname  String
  username  String      @unique
  active    Boolean     @default(true)
  bills     Bill[]
  GroupUser GroupUser[]
  Invite    Invite[]

  @@index([username])
}

model GroupUser {
  id      String @id @unique @default(cuid())
  Group   Group  @relation(fields: [groupId], references: [id])
  groupId String
  User    User   @relation(fields: [userId], references: [id])
  userId  String
}

model Group {
  id          String      @id @unique @default(cuid())
  name        String
  description String?
  bills       Bill[]
  GroupUser   GroupUser[]
  Invite      Invite[]
}

model Bill {
  id          String  @id @unique @default(cuid())
  description String
  amount      Int
  User        User?   @relation(fields: [userId], references: [id])
  userId      String?
  Group       Group?  @relation(fields: [groupId], references: [id])
  groupId     String?
}

model Invite {
  id      String  @id @unique @default(cuid())
  User    User?   @relation(fields: [userId], references: [id])
  userId  String?
  Group   Group?  @relation(fields: [groupId], references: [id])
  groupId String?

  @@index([userId])
}
